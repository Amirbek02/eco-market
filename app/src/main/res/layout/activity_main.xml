<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="Эко Маркет"
               android:textSize="24dp"
               android:paddingLeft="150dp"

              />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_margin="8dp"
                  android:background="@drawable/card_background"
                  android:padding="8dp">

                  <!-- Карточка с изображением -->
                  <FrameLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:clipToPadding="false"
                      android:clipChildren="true">

                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/category1"
                          android:scaleType="centerCrop"
                          android:clipToOutline="true" />

                      <!-- Текст поверх изображения -->
                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Фрукты"
                          android:textColor="@android:color/white"
                          android:textSize="18sp"
                          android:gravity="center"
                          android:layout_gravity="bottom"
                          android:padding="8dp"
                          android:background="#99000000"/>
                  </FrameLayout>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_margin="8dp"
                  android:background="@drawable/card_background"
                  android:padding="8dp">

                  <!-- Карточка с изображением -->
                  <FrameLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:clipToPadding="false"
                      android:clipChildren="true">

                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:src="@drawable/category2"
                      android:scaleType="centerCrop"
                      android:clipToOutline="true" />

                      <!-- Текст поверх изображения -->
                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Сухофрукты"
                          android:textColor="@android:color/white"
                          android:textSize="18sp"
                          android:gravity="center"
                          android:layout_gravity="bottom"
                          android:padding="8dp"
                          android:background="#99000000"/>
                  </FrameLayout>
              </LinearLayout>

          </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_margin="8dp"
                   android:background="@drawable/card_background"
                   android:padding="8dp">

                   <!-- Карточка с изображением -->
                   <FrameLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:clipToPadding="false"
                       android:clipChildren="true">

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/category3"
                           android:scaleType="centerCrop"
                           android:clipToOutline="true" />

                       <!-- Текст поверх изображения -->
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Овощи"
                           android:textColor="@android:color/white"
                           android:textSize="18sp"
                           android:gravity="center"
                           android:layout_gravity="bottom"
                           android:padding="8dp"
                           android:background="#99000000"/>
                   </FrameLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_margin="8dp"
                   android:background="@drawable/card_background"
                   android:padding="8dp">

                   <!-- Карточка с изображением -->
                   <FrameLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:clipToPadding="false"
                       android:clipChildren="true">

                       <ImageView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@drawable/category4"
                           android:scaleType="centerCrop"
                           android:clipToOutline="true" />

                       <!-- Текст поверх изображения -->
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Зелень"
                           android:textColor="@android:color/white"
                           android:textSize="18sp"
                           android:gravity="center"
                           android:layout_gravity="bottom"
                           android:padding="8dp"
                           android:background="#99000000"/>
                   </FrameLayout>
               </LinearLayout>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_margin="8dp"
                   android:background="@drawable/card_background"
                   android:padding="8dp">

                   <!-- Карточка с изображением -->
                   <FrameLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:clipToPadding="false"
                       android:clipChildren="true">

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/category5"
                           android:scaleType="centerCrop"
                           android:clipToOutline="true" />

                       <!-- Текст поверх изображения -->
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Чай кофе"
                           android:textColor="@android:color/white"
                           android:textSize="18sp"
                           android:gravity="center"
                           android:layout_gravity="bottom"
                           android:padding="8dp"
                           android:background="#99000000"/>
                   </FrameLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_margin="8dp"
                   android:background="@drawable/card_background"
                   android:padding="8dp">

                   <!-- Карточка с изображением -->
                   <FrameLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:clipToPadding="false"
                       android:clipChildren="true">

                       <ImageView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@drawable/category6"
                           android:scaleType="centerCrop"
                           android:clipToOutline="true" />

                       <!-- Текст поверх изображения -->
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Молочные продукты"
                           android:textColor="@android:color/white"
                           android:textSize="18sp"
                           android:gravity="center"
                           android:layout_gravity="bottom"
                           android:padding="8dp"
                           android:background="#99000000"/>
                   </FrameLayout>
               </LinearLayout>

           </LinearLayout>
       </LinearLayout>
   </ScrollView>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_gravity="bottom"

            android:layout_height="60dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">

                <LinearLayout
                    android:id="@+id/home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/home" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Главная"
                        android:textAlignment="center"

                        android:textColor="@color/green"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/basket"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/bag_03" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Корзина"
                        android:textAlignment="center"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hitory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/clock_01" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="История"
                        android:textAlignment="center"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/help_square_contained" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Инфо"
                        android:textAlignment="center"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>